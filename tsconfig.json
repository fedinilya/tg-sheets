{
  "compilerOptions": {
    "paths": {
      "@config": ["src/config/*"],
      "@services/*": ["src/services/*"]
    },
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "build",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false
  },
  "compileOnSave": false,
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
